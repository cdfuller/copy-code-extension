{
  "manifest_version": 3,
  "name": "Copy Code Button",
  "version": "0.1.0",
  "description": "Adds a copy button to <code> blocks",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "applications": {
    "gecko": {
      "id": "your-extension@example.com",
      "strict_min_version": "48.0"
    }
  }
}
